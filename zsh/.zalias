# ~/.zsh_aliases
## ls
alias ls='ls -F --color=auto --group-directories-first -X -h'
alias l='ls'
alias ll='ls -l'
alias la='ls -A'
alias lla='ls -lA'
alias l1='/bin/ls -1'
alias lt='noglob tree -C --dirsfirst -I node_modules\|__pycache__\|*.egg-info\|venv\|lua5?\|luajit'
alias ltd='lt -d'
alias lta='lt -a'
alias fd="fd -c never"
## vim
alias v='nvim'
alias mail='vipe --suffix eml | msmtp -d -t'
## zsh
alias ze='v ~/.zshrc'
alias zp='v ~/.zprofile'
alias za='v ~/.zaliases'
alias sz='source ~/.zshrc'
alias hg='history | grep'
## system
alias sc='systemctl'
alias nc='netctl'
alias ping='ping -4'
# ssh
alias scp="noglob scp"
alias ssh="TERM=xterm-256color noglob ssh"
alias sa='ssh-add'
# dictd
alias dic="sdcv --color"
alias dict="sdcv -n -c -0 -1"
# git
alias g="git"
alias ga='git add'
alias gc='git commit'
alias gl='git log --oneline --decorate'
alias gs='git status --short'
alias gco='git checkout'
alias gb='git branch'
alias gcd='cd $(git root)'
alias gls="git ls-files"
# python
alias ae='cd $(git root); deactivate &> /dev/null; source .venv/bin/activate; cd -'
alias de='deactivate'
alias py='python'
# lua
alias lae='cd $(git root); deactivate-lua &> /dev/null; source .hererocks/bin/activate; cd -'
alias lde='deactivate-lua'
# misc
alias mu='mupdf'
alias ydl="noglob youtube-dl -x --audio-format mp3 --audio-quality 0"
alias youtube-dl="noglob youtube-dl"
alias rn="perl-rename"
alias e3="eyeD3"
alias ffprobe="ffprobe -hide_banner"
# telegram
alias tg="telegram-cli"
# tmux
alias tm="tmux"
alias tl="tmux list-sessions"
alias ta="tmux attach -t"
alias td="tmux detach"
alias tn="tmux new"
# figlet / toilet
alias toi="toilet -f 3d"
